<Window x:Class="PL.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Drone Delivery Service" Height="auto" Width="auto" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Height="150" Width="150">
        
        <Grid x:Name="passwordGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Enter Password:" Grid.Row="0" Background="BurlyWood" FontSize="16"/>
            <PasswordBox x:Name="newPassword"  Grid.Row="1" Background="LemonChiffon" FontSize="16"/>
            <TextBlock Text="Confirm Password:" Grid.Row="2" Background="BurlyWood" FontSize="16"/>
            <PasswordBox x:Name="newPasswordConfirm"  Grid.Row="3" Background="LemonChiffon" FontSize="16"/>
            <Button x:Name="changePasswordButton" Content="Change Password" Grid.Row="4" FontSize="14" Click="changePasswordButton_Click" Margin="0,0,0,0"/>
        </Grid>

        <Grid x:Name="confirmPackageGrid" Background="BurlyWood" Visibility="Collapsed">
            <TextBlock Text="Confirm?" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,30,0,0" FontSize="24"/>
            <Button x:Name="yesButton" Content="Yes" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="25" Width="60" Margin="0,0,0,50" FontSize="14" Click="yesButton_Click"/>
            <Button x:Name="noButton" Content="No" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="25" Width="60" Margin="0,0,0,20" FontSize="14" Click="noButton_Click"/>
        </Grid>
    
    </Grid>
</Window>
