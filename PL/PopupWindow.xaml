<Window x:Class="PL.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="PopupWindow" Height="90" Width="135">
    <Grid>
        <Grid x:Name="password">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Enter Password:" Grid.Row="0" Background="BurlyWood"/>
            <PasswordBox x:Name="newPassword"  Grid.Row="1" Background="LemonChiffon"/>
            <TextBlock Text="Confirm Password:" Grid.Row="2" Background="BurlyWood"/>
            <PasswordBox x:Name="newPasswordConfirm"  Grid.Row="3" Background="LemonChiffon"/>
        </Grid>
        <Grid x:Name="confirm" Visibility="Collapsed">

        </Grid>
    </Grid>
</Window>
